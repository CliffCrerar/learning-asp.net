@page
@model ContosoUniversity.Pages.Students.DetailsModel
@{ViewData["Title"] = Model.Title;}

<div>
    <div class="d-flex flex-row justify-content-between align-items-center">
        <h4>Student</h4>
        <div class="btn-group">
            <a class="btn btn-info" asp-page="./Edit" asp-route-id="@Model.Students.ID">Edit</a>
            <a class="btn btn-primary" asp-page="./Index">Back to List</a>
        </div>
    </div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Students.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Students.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Students.FirstMidName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Students.FirstMidName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Students.EnrollmentDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Students.EnrollmentDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Students.Enrollments)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Course Title</th>
                    <th>Grade</th>
                </tr>
                @foreach (var item in Model.Students.Enrollments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Grade)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>

