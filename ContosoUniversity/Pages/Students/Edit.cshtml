@page
@model ContosoUniversity.Pages.Students.EditModel
@{ViewData["Title"] = Model.Title;}

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Students.ID" />
            <div class="form-group">
                <label asp-for="Students.LastName" class="control-label"></label>
                <input asp-for="Students.LastName" class="form-control" />
                <span asp-validation-for="Students.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Students.FirstMidName" class="control-label"></label>
                <input asp-for="Students.FirstMidName" class="form-control" />
                <span asp-validation-for="Students.FirstMidName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Students.EnrollmentDate" class="control-label"></label>
                <input asp-for="Students.EnrollmentDate" class="form-control" />
                <span asp-validation-for="Students.EnrollmentDate" class="text-danger"></span>
            </div>
            <div class="form-group btn-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

