@using ContosoUniversity.Models.View
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contoso University</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-custom navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                <a class="navbar-brand flex-start" asp-area="" asp-page="/Index">Contoso University</a>

                <button
                        class="navbar-toggler"
                        type="button"
                        data-toggle="collapse"
                        data-target="#items"
                        aria-controls="items"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <style>
                        .nav-link{
                            border-bottom: 2px solid transparent;
                        }
                        .active{
                            border-bottom: 2px solid black
                        }
                    </style>

                    <ul id="items" class="navbar-nav flex-grow-1 justify-content-end">

                        @{
                            var Links = new NavLinks().Links;
                            foreach (var link in Links)
                            {
                                <li class="nav-item text-white">
                                    <a id="@link.LinkId"
                                       class="nav-link"
                                       asp-area=""
                                       asp-page="@link.LinkHref">@link.LinkTitle</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Contoso University - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(window).on('load', onWindowLoadActivateTab)

        function onWindowLoadActivateTab() {
            console.log('load',location.pathname.split('/')[1])
            const setTab = (anchorId) => $('#'+anchorId).addClass('active');
            return location.pathname === '/' 
                ? setTab('tab-Home')
                : setTab('tab-'+location.pathname.split('/')[1]);
        }
    </script>

        @RenderSection("Scripts", required: false)
</body>
</html>
